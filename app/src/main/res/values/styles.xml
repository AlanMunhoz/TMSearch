<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar theme-->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorToolbarIcon</item>
        <item name="titleTextColor">@color/colorToolbarText</item>
    </style>

    <!--Drawer menu theme-->
    <style name="NavigationDrawerTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorDrawerSelected</item>
    </style>




    <style name="TextViewDetailsScreen1" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/clDarkTextColor</item>
    </style>

    <style name="TextViewDetailsScreen2" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/clDarkTextColor</item>
    </style>

</resources>
