<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar theme-->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorToolbarIcon</item>
        <item name="titleTextColor">@color/colorToolbarText</item>
    </style>

    <!--Drawer menu theme-->
    <style name="NavigationDrawerTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorDrawerSelected</item>
    </style>

</resources>
