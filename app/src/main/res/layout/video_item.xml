<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/clMiddleColor"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/elevation_card_view">

        <ImageView
            android:id="@+id/iv_figure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/poster_movie_content_desc"
            android:scaleType="fitStart" />

        <!--android:src="@drawable/baseline_movie_black_48" />-->

    </android.support.v7.widget.CardView>

</FrameLayout>
